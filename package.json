{
  "name": "social-media-dashboard",
  "version": "1.0.0",
  "description": "A social media dashboard with theme switcher - Frontend Mentor challenge",
  "private": true,
  "workspaces": ["Client", "Server"],
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:client",
    "dev:server": "npm --prefix Server run dev",
    "dev:client": "npm --prefix Client run dev",
    "build:client": "npm --prefix Client run build",
    "start": "npm --prefix Server start",
    "start:server": "npm --prefix Server start",
    "install:all": "npm install && npm --prefix Client install && npm --prefix Server install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "keywords": ["social-media", "dashboard", "react", "express", "theme-switcher"],
  "author": "",
  "license": "MIT"
}